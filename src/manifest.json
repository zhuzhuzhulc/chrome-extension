{
  "name": "__MSG_extensionName__",
  "version": "1.0.1",
  "manifest_version": 2,
  "short_name": "__MSG_extensionShortName__",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "http://streamable.com",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "__MSG_pageActionTooltip__"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "webRequest",
    "contextMenus",
    "notifications",
    "tabs",
    "storage",
    "*://*.ttvnw.net/*",
    "*://*.twitch.tv/*",
    "*://*.streamable.com/*",
    "<all_urls>"
  ],
  "web_accessible_resources": ["*"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.twitch.tv/*"
    ]
  }
}
